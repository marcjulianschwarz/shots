---
interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---

{
    tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
                <a
                    href={`/tags/${tag}`}
                    class="px-3 py-1 bg-zinc-800 hover:bg-zinc-700 text-zinc-200 rounded-full text-sm transition-colors"
                >
                    #{tag}
                </a>
            ))}
        </div>
    )
}
