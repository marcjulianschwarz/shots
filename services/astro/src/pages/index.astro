---
import Layout from "../layouts/Layout.astro";
import PhotoGrid from "../components/PhotoGrid.astro";
import { getRecentPhotos } from "../lib/photos";

const recentPhotos = getRecentPhotos(30);
---

<Layout title="Gallery - Shots x Marc Julian">
    <div class="space-y-8">
        <div>
            <h1 class="text-4xl font-bold text-white mb-2">Gallery</h1>
            <p class="text-zinc-400">Recent photographs</p>
        </div>

        <PhotoGrid photos={recentPhotos} />
    </div>
</Layout>
